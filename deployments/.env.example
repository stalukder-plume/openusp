# OpenUSP Local Development Environment Configuration
# Copy this file to .env and customize the values as needed

# =============================================================================
# Database Configuration (MongoDB)
# =============================================================================
MONGO_VERSION=latest
MONGO_HOST=openusp-db
MONGO_PORT=27017
MONGO_HOST_PORT=27017
MONGO_DATABASE=openusp
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin

# =============================================================================
# Message Broker Configuration (ActiveMQ)
# =============================================================================
ACTIVEMQ_VERSION=mariadb_max_packet
ACTIVEMQ_HOST=openusp-broker
ACTIVEMQ_ADMIN_USER=admin
ACTIVEMQ_ADMIN_PASSWORD=admin
ACTIVEMQ_MIN_MEMORY=512
ACTIVEMQ_MAX_MEMORY=2048

# Port Mappings
ACTIVEMQ_STOMP_PORT=61613
ACTIVEMQ_STOMP_HOST_PORT=61613
ACTIVEMQ_STOMPS_HOST_PORT=61614
ACTIVEMQ_OPENWIRE_PORT=61616
ACTIVEMQ_OPENWIRE_HOST_PORT=61616
ACTIVEMQ_WEB_PORT=8161
ACTIVEMQ_WEB_HOST_PORT=8161
ACTIVEMQ_MQTT_PORT=1883
ACTIVEMQ_MQTT_HOST_PORT=1883

# =============================================================================
# Cache Configuration (Redis)
# =============================================================================
REDIS_VERSION=latest
REDIS_HOST=openusp-cache
REDIS_PORT=6379
REDIS_HOST_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_MEMORY=256mb

# =============================================================================
# Network Configuration
# =============================================================================
NETWORK_SUBNET=172.20.0.0/16

# =============================================================================
# Development/Testing Overrides
# =============================================================================
# Uncomment and modify these for specific development needs
# MONGO_VERSION=4.4
# REDIS_VERSION=6.2-alpine
# ACTIVEMQ_VERSION=latest
# MONGO_HOST_PORT=27018
# REDIS_HOST_PORT=6380